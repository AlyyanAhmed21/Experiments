# Multi-Agent AI Personal Assistant - Environment Variables Template
# Copy this file to .env and fill in your API keys

# Required: Groq API Key (Free tier available at https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Required: LangSmith API Key (Free tier available at https://smith.langchain.com)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# LangSmith Configuration
LANGSMITH_PROJECT=multi-agent-assistant
LANGSMITH_TRACING=true

# Optional: OpenAI API Key (Only needed for TTS voice output)
# Voice INPUT (STT) uses FREE local Whisper - no API key needed!
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
DEFAULT_MODEL=llama-3.3-70b-versatile
TEMPERATURE=0.7
MAX_TOKENS=2048

# Database Configuration
DATABASE_PATH=data/assistant.db

# Voice Features
ENABLE_VOICE_INPUT=true   # FREE - uses local Whisper via Hugging Face
ENABLE_VOICE_OUTPUT=false  # Requires OpenAI API key for TTS
